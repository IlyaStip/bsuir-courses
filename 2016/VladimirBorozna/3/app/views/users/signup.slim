form.form-horizontal method="post" action="/users/signup"
  .modal-header
    button.close data-dismiss="modal" type="button" &times;
    h4.modal-title Sign Up
  .modal-body
    .form-group
      .col-sm-12
        input#name.form-control name="name" placeholder="Name"
    .form-group
      .col-sm-12
        input#pwd.form-control name="password" placeholder="Password" type="password"
    .row
      .col-sm-12
        input#pwd.form-control name="password_confirmation" placeholder="Confirmation" type="password"
  .modal-footer
    .row
      .col-sm-offset-3.col-sm-9
        button.btn.btn-default type="submit" Submit
